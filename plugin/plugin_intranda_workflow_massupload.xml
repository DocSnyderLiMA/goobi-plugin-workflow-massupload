<config_plugin>

	<!-- which file types shall be allowed for uploading these -->
	<allowed-file-extensions>/(\.|\/)(gif|jpe?g|png|tiff?|jp2|pdf)$/</allowed-file-extensions>

	<!-- name of the folder inside of a users home directory to use as alternative for web upload -->
	<user-folder-name>mass_upload</user-folder-name>

	<!-- define if instead of the file naming a barcode shall be analyzed to match the following images to the corresponding process until the next barcode  gets recognized -->
	<use-barcodes>false</use-barcodes>

	<!-- copy images using goobi script in the background (true or false) -->
	<copy-images-using-goobiscript>false</copy-images-using-goobiscript>

	<!-- which workflow step has to be open to allow the upload into the process -->
	<allowed-step>Scanning</allowed-step>
	<allowed-step>Upload</allowed-step>

	<!-- define filename-identifier: which part of the file names shall be used to find the right process (prefix, suffix or complete) -->
	<filename-part>prefix</filename-part>
	<filename-separator>_</filename-separator>
	<!-- define process-identifier: which part of the process names shall be used to match the right process (prefix, suffix or complete) -->
    <processname-part>suffix</processname-part>
    <processname-separator>_</processname-separator>
    
    <!-- define if the process-identifier must contain the filename-identifier or must match the exact filename-identifier (contains or exact)  -->
    <match-type>exact</match-type>
	<!-- set the limit of search results within process query -->
    <maxNumberofProcesses-SearchResult>20</maxNumberofProcesses-SearchResult>
  
</config_plugin>
